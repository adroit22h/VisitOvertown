<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:layout_goneMarginRight="@dimen/cardview_default_elevation"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size8">

       <ImageView
            android:id="@+id/location_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size300"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/myBlue"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_below="@id/location_image"
            android:elevation="@dimen/size2" />

        <TextView
            android:id="@+id/location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:gravity="center"
            android:textColor="@color/myBlue"
            android:textStyle="italic"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/location_name"
            android:elevation="@dimen/size2"/>

        <TextView
            android:id="@+id/location_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:gravity="center"
            android:textColor="@color/myBlue"
            android:textStyle="italic"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/location_address"
            android:elevation="@dimen/size2"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>


